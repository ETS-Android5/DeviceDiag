<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_act_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pacmac.devinfo.SIMInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:shrinkColumns="1">

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIM State: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/simInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>


                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIM SN: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/serialN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMEI: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/imei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMSI: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/imsiNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Radio: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/phoneRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPN Name: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/operatorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:id="@+id/mccSPN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPN-MCC:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mncSPN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="SPN-MNC:"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network Name: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/networkName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:id="@+id/mccCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MCC:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mncCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="MNC:"
                        android:textSize="12sp" />

                </TableRow>


                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provider Country: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/networkCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network Type: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/networkType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sim Number: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Cell: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cellInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>


                <TableRow
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data State: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/dataState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Activity: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/dataActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="N/A"
                        android:textSize="12sp" />

                </TableRow>

            </TableLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
