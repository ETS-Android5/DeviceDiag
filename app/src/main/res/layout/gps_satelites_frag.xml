<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/dark_act_bg"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:paddingBottom="7dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:orientation="vertical">

        <!--<ListView-->
            <!--android:id="@+id/sateliteList"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@android:drawable/dialog_holo_light_frame"-->
            <!--android:divider="@color/primary_dark_material_light"-->
            <!--android:dividerHeight="1px"-->
            <!--android:padding="1dp"-->
            <!--android:scrollbars="none">-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Satelites:"
            android:textSize="14sp"
            android:padding="8dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:background="@color/blue_ab"
            android:textColor="@color/abc_primary_text_material_dark"
            android:layout_gravity="center_horizontal"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sateliteList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:divider="@color/primary_dark_material_light"
            android:dividerHeight="1px"
            tools:listitem="@layout/satelite_list_item"
            android:padding="1dp"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>