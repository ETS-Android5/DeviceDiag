<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idSensor"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            android:text="24"
            android:textColor="@color/text_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/nameSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Sensor Type"
                android:textAllCaps="true"
                android:textColor="@color/text_name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/manSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer"
                android:textColor="@color/text_name"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            app:tint="@color/btn_blue"
            android:tint="@color/btn_blue"
            android:src="@drawable/round_arrow_forward_ios_black_36dp"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>